# ==================== BOT CONFIGURATION ====================
API_ID=your_api_id
API_HASH=your_api_hash
BOT_TOKEN=your_bot_token

# ==================== CHANNEL IDS ====================
# Storage channel where you send files (use -100 prefix for channels)
STORAGE_CHANNEL_ID=-1001234567890

# Main channel where bot posts LuluStream links
MAIN_CHANNEL_ID=-1001234567890

# Your Telegram user ID
ADMIN_ID=123456789

# ==================== LULUSTREAM API ====================
LULUSTREAM_API_KEY=199514y1c4wef9n2vn39jl

# ==================== UPLOAD SETTINGS ====================
# LuluStream folder ID
FOLDER_ID=25

# LuluStream category ID
CATEGORY_ID=5

# Tags for videos
DEFAULT_TAGS=Promo, High quality

# Public flag (1 = public, 0 = private)
FILE_PUBLIC=1

# Adult flag (1 = adult, 0 = normal)
FILE_ADULT=1

# ==================== SCHEDULER SETTINGS ====================
# How many videos to post per batch
VIDEOS_PER_BATCH=10

# Interval between batches (in minutes)
POST_INTERVAL_MINUTES=60

# ==================== MONGODB DATABASE ====================
# MongoDB connection string
# Get free database from https://www.mongodb.com/cloud/atlas
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority

# Database name
MONGO_DB=lulustream_bot
